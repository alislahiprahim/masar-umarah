{
  "css.validate": false,
  "tailwindCSS.lint.unknownAtRules": "ignore",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveFileTypes": [
    "html",
    "css",
    "scss",
    "javascript",
    "typescript"
  ],
  "editor.formatOnSaveOptions": {
    "tabSize": 2
  },
  "editor.codeActions.onSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.removeUnusedImports": true,
    "source.autoFixOnSave": true
  }
}